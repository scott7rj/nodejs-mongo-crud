<% include partials/_header %>
<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                        <form action="/edit/<%= task._id %>" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" id="title" value="<%= task.title %>" placeholder="title" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" id="description" placeholder="description" cols="80" class="form-control"><%= task.description %></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include partials/_footer %>